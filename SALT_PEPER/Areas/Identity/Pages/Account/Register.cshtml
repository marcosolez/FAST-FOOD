@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 col-md-offset-2">

    </div>
    <div class="col-md-4 card">
        <div class="card-body">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Registrar usuarios</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.NombreCompleto"></label>
                    <input asp-for="Input.NombreCompleto" class="form-control" />
                    <span asp-validation-for="Input.NombreCompleto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Celular"></label>
                    <input asp-for="Input.Celular" class="form-control" />
                    <span asp-validation-for="Input.Celular" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Direcion"></label>
                    <textarea asp-for="Input.Direcion" class="form-control"></textarea>
                    <span asp-validation-for="Input.Direcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Rol"> </label>
                    @Html.DropDownListFor(x => x.Input.Rol, new SelectList(Model.ListaRoles, "Name", "Name"), "-- Seleccione el rol--", new { @class = "form-control-lg select2", style = "width:100%" })

                    <span asp-validation-for="Input.Rol" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
    <div class="col-md-4 col-md-offset-2">

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
